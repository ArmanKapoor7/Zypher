<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:id="@+id/bottomsheetcont"
    android:layout_marginStart="10dp"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="30dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="@string/font"
            android:layout_weight="2"
            android:textSize="20sp" />

    <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:text="@string/aa"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7.3"
            android:min="10"
            android:max="40"
            android:progress="25" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="2"
            android:text="@string/aa"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="@string/align"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_format_align_left"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/todo"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_format_align_right"
            android:contentDescription="@string/todo"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_format_align_justify"
            android:contentDescription="@string/todo"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_format_align_center"
            android:contentDescription="@string/todo"
            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="@string/line_spacing"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:textSize="20sp" />


        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_menu_black_24dp"
            tools:ignore="VectorDrawableCompat"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_menu_black_32dp"
            android:contentDescription="@string/todo"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_menu_black_40dp"
            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="@string/margins"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:textSize="20sp" />


        <Button
            android:id="@+id/Button8"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:text="@string/_5dp"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/white"
            android:textColor="@drawable/textcolor"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/Button9"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/white"
            android:text="@string/_10dp"
            android:textColor="@drawable/textcolor"
            android:textAllCaps="false"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/Button10"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="center_vertical"
            android:text="@string/_15dp"
            android:textColor="@drawable/textcolor"
            android:textAllCaps="false"
            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="@string/mode"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:text="@string/aa"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="center_vertical"
            android:text="@string/aa"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#F6F4EAE7"
            android:text="@string/aa"
            android:textStyle="bold"
            android:textColor="@color/color"
            android:textAllCaps="false"/>


    </LinearLayout>


</LinearLayout>